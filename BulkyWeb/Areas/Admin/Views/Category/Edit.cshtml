@model Category

<div class="container-fluid ">
<div class="row">
    <div class="col-lg-6 col-md-8 col-sm-12 m-auto ">
        <div class="card border-primary rounded-3 shadow-lg mt-5 p-3 ">
            <form class="mt-3 p-3 " method="post">
                <div class="card-header bg-transparent">
                    <h3 class="mb-3"> Edit a new category</h3>
                </div>
                <!--- Name input -->
                <div class="card-body">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-outline mb-4">
                        <label asp-for="Name" class="form-label" for="form5Example1">Category Name</label>
                        <input asp-for="Name" id="form5Example1" class="form-control bg-transparent border-1" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <!-- display order input -->
                    <div class="form-outline mb-4">
                        <label asp-for="DisplayOrder" class="form-label" for="form5Example2">Display Order</label>
                        <input asp-for="DisplayOrder" id="form5Example2" class="form-control  bg-transparent border-1" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                    </div>

                    <!-- Submit button -->
                    <div class="card-footer bg-transparent ">
                        <button type="submit" class="btn btn-primary mb-2  ">Edit</button>


                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mb-2 ms-2 ">
                            Back to List
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>