@model Category

<div class="container">
    <div class="row">
        <div class="col-6 m-auto ">
            <form class="mt-3 p-3 " method="post" >
                   <input asp-for="Id" hidden/> 
                <h3 class="mb-3"> Are you sure you want to delete this category?</h3>
                <!--- Name input -->
              
                <div class="form-outline mb-4">
                    <label asp-for="Name" class="form-label text-secondary" for="form5Example1">Category Name</label>
               
                   <p>@Model.Name</p>
                </div>
                <!-- display order input -->
                <div class="form-outline mb-4">
                    <label asp-for="DisplayOrder" class="form-label text-secondary" for="form5Example2">Display Order</label>
                
                    <p>@Model.DisplayOrder</p>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-danger  mb-4 ">Delete</button>


                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary mb-4 ms-2 ">
                    Back to List
                </a>

            </form>
        </div>
    </div>
</div>