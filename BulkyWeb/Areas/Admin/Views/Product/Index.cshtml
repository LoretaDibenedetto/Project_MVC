
@model List<Product>

<div class="container card bg-dark rounded-3 shadow-lg mt-5">
    <div class="row mt-5">
        

            <div class="col-6 mb-4">
                <h2>Product List</h2>
            </div>

            <div class="col-6 mb-4">
                <a asp-controller="Product" asp-action="Create" class="btn btn-outline-light ms-4">
                    <i class="bi bi-plus-circle me-1"> </i> Create New Product
                </a>
            </div>
        
    </div>




<table class="table table-bordered ">
    <thead>
        <tr>
            <th scope="col">
              Title
            </th>
            <th scope="col">ISBN</th>
            <th scope="col">Price</th>
            <th scope="col">Author</th>
            <th scope="col">Category</th>


       
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>@obj.Title</td>
            <td>@obj.ISBN</td>
                    <td>@obj.ListPrice</td>
                    <td>@obj.Author</td>
                    <td></td>

            <td>
                
                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary rounded-3 mb-2" style="width:90px">
                                <i class="bi bi-pencil"></i> Edit
                    </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-outline-danger rounded-3 " style=" width:90px">
                                <i class="bi bi-x-circle"></i> Delete
                   </a>
                
            </td>

       
          
        </tr>
        }
       
    </tbody>
    </table>

</div>