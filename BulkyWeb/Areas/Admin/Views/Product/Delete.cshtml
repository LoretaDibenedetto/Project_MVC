<div class="container-fluid ">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-12 m-auto ">
            <div class="card border-danger rounded-3 shadow-lg mt-5 p-3 ">
                <form class="mt-3 p-3 " method="post">
                    <input asp-for="Id" hidden />
                    <h3 class="mb-3  text-light"> Are you sure you want to delete this product?</h3>
                    <!--- Name input -->

                    <div class="form-outline mb-4">
                        <label asp-for="Title" class="form-label text-danger" for="form5Example1">Product Name</label>
                        <input asp-for="Title" disabled id="form5Example1" class="form-control bg-transparent border-1" />

                    </div>
                    <!-- display order input -->
                    <div class="form-outline mb-4">
                        <label asp-for="Description" class="form-label text-danger" for="form5Example2">Description</label>
                        <input asp-for="Description" disabled id="form5Example2" class="form-control bg-transparent border-1" />


                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="ISBN" class="form-label  text-danger" for="form5Example2">ISBN</label>
                        <input asp-for="ISBN" disabled id="form5Example2" class="form-control bg-transparent border-1" />


                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="Author" class="form-label  text-danger" for="form5Example2">Author</label>
                        <input asp-for="Author" disabled id="form5Example2" class="form-control bg-transparent border-1" />


                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="ListPrice" class="form-label text-danger" for="form5Example2">List Price</label>
                        <input asp-for="ListPrice" disabled id="form5Example2" class="form-control bg-transparent border-1" />

                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="Price" class="form-label text-danger" for="form5Example2">Price</label>
                        <input asp-for="Price" disabled id="form5Example2" class="form-control bg-transparent border-1" />


                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="Price50" class="form-label text-danger" for="form5Example2">Price 50</label>
                        <input asp-for="Price50" disabled id="form5Example2" class="form-control bg-transparent border-1" />


                    </div>
                    <div class="form-outline mb-4 ">
                        <label asp-for="Price100" class="form-label text-danger" for="form5Example2">Price 100</label>
                        <input asp-for="Price100" disabled id="form5Example2" class="form-control bg-transparent border-1" />


                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-danger  mb-4 ">Delete</button>


                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary mb-4 ms-2 ">
                        Back to List
                    </a>

                </form>
            </div>
        </div>
    </div>
</div>