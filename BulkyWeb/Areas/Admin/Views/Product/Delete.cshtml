@model Product

<div class="container">
    <div class="row">
        <div class="col-6 m-auto ">
            <form class="mt-3 p-3 " method="post" >
                   <input asp-for="Id" hidden/> 
                <h3 class="mb-3"> Are you sure you want to delete this product?</h3>
                <!--- Name input -->
              
                <div class="form-outline mb-4">
                    <label asp-for="Title" class="form-label" for="form5Example1">Product Name</label>
                    <input asp-for="Title" disabled id="form5Example1" class="form-control" />
                  
                </div>
                <!-- display order input -->
                <div class="form-outline mb-4">
                    <label asp-for="Description" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Description" disabled id="form5Example2" class="form-control" />
                 

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="ISBN" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="ISBN" disabled id="form5Example2" class="form-control" />
                  

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Author" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Author" disabled id="form5Example2" class="form-control" />
                 

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="ListPrice" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="ListPrice" disabled id="form5Example2" class="form-control" />
                    
                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Price" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Price" disabled id="form5Example2" class="form-control" />
                  

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Price50" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Price50" disabled id="form5Example2" class="form-control" />
                  

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Price100" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Price100" disabled id="form5Example2" class="form-control" />
               

                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-danger  mb-4 ">Delete</button>


                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mb-4 ms-2 ">
                    Back to List
                </a>

            </form>
        </div>
    </div>
</div>