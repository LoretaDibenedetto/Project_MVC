                            <span asp-validation-for="Description" class=" text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ISBN" id="form5Example2" class="form-control rounded-3 bg-transparent border-1" />
                            <label asp-for="ISBN" class="form-label" for="form5Example2">ISBN</label>
                            <span asp-validation-for="ISBN" class="text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Author" id="form5Example2" class="form-control rounded-3 bg-transparent border-1" />
                            <label asp-for="Author" class="form-label" for="form5Example2">Author</label>
                            <span asp-validation-for="Author" class="text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="ListPrice" id="form5Example2" class="form-control rounded-3 bg-transparent border-1" />
                            <label asp-for="ListPrice" class="form-label" for="form5Example2">List Price</label>
                            <span asp-validation-for="ListPrice" class="text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Price" id="form5Example2" class="form-control rounded-3 bg-transparent border-1" />
                            <label asp-for="Price" class="form-label" for="form5Example2">Price</label>
                            <span asp-validation-for="Price" class="text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Price50" id="form5Example2" class="form-control rounded-3 bg-transparent border-1" />
                            <label asp-for="Price50" class="form-label" for="form5Example2">Price 50</label>
                            <span asp-validation-for="Price50" class="text-danger"></span>

                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Price100" id="form5Example2" class="form-control rounded-3 bg-transparent border-1" />
                            <label asp-for="Price100" class="form-label" for="form5Example2">Price 100</label>
                            <span asp-validation-for="Price100" class="text-danger"></span>

                        </div>
                       
                    </div>

                    <!-- Submit button -->
                    <div class="card-footer bg-transparent">

                        <button type="submit" class="btn btn-primary  mb-4 ">Create</button>



                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mb-4 ms-2 ">
                            Back to List
                        </a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>