@model ProductVM

<div class="container card bg-dark rounded-3 shadow-lg mt-5">
    <div class="row">
        <div class="col-6 m-auto ">
        <form class="mt-3" method="post">
    
            <h3 class="mb-3"> Create a new product</h3>
            <!--- Name input -->
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.Title" class="form-label" for="form5Example1">Product Name</label>
                    <input asp-for="Product.Title" id="form5Example1" class="form-control" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
            <!-- display order input -->
                <div class="form-outline mb-4">
                    <label asp-for="Product.Description" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.Description" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.Description" class=" text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.ISBN" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.ISBN" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.Author" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.Author" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.Author" class="text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.ListPrice" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.ListPrice" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.Price" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.Price" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.Price50" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.Price50" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <label asp-for="Product.Price100" class="form-label" for="form5Example2">Display Order</label>
                    <input asp-for="Product.Price100" id="form5Example2" class="form-control" />
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>

                </div>
                <div class="form-outline mb-4">
                    <select asp-for="Product.CategoryId" asp-items="ViewBag.CategoryList">
                        <option disabled selected>--Select Category--</option>
                    </select>
                 
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>

                </div>


            <!-- Submit button -->
                <button type="submit" class="btn btn-primary  mb-4 " >Create</button>


                   <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mb-4 ms-2 "  >
                                Back to List
                   </a>
       
            </form>
    </div>
    </div>
</div>